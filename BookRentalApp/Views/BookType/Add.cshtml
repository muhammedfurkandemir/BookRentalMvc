@model BookType

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Türü Ekle</h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-primary"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:250px">Ekle</button>

        <a asp-controller="BookType" asp-action="Index" class="btn btn-primary" style="width:250px">Geri Dön</a>

    </div>

</form>

