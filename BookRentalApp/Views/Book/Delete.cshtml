@model Book

<form method="post">
    @*<input asp-for="Id" hidden /> Burda Biz Her sınıfın ve özellğin adını uygun verdiğimiz için mapleme yapmadan .net algılıyor ancak mapleme yapmamız gerekseydi metoda gidecek özelliği bu şekilde göndermemiz gerekirdi.*@
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kitap Sil</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="BookName" class="p-0"></label>
            <input asp-for="BookName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Writer" class="p-0"></label>
            <input asp-for="Writer" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Contributor" class="p-0"></label>
            <input asp-for="Contributor" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:250px">Sil</button>

        <a asp-controller="Book" asp-action="Index" class="btn btn-primary" style="width:250px">Geri Dön</a>
    </div>
</form>
