@model Rental

<form method="post" >

    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3">
                    <h2 class="text-primary">Kitap Güncelle</h2>
                    <hr>
                </div>

                <div class="mb-3">
                    <label asp-for="StudentId" class="p-0"></label>
                    <input asp-for="StudentId" class="form-control" />
                    <span asp-validation-for="StudentId" class="text-primary"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BookId" class="p-0"></label>
                    <select asp-for="BookId" asp-items="ViewBag.Books" class="form-select">
                        <option value="" disabled selected hidden>Lütfen Kitap Seçiniz</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary" style="width:250px">Güncelle</button>

                <a asp-controller="Rental" asp-action="Index" class="btn btn-primary" style="width:250px">Geri Dön</a>

            </div>
        </div>

        @* <div class="col-2">

            <img src="@Model.Book.ImageUrl" width="250"
            style="border-radius:7px; border:1px solid #bbb9b9" />
        </div> *@

    </div>

</form>

